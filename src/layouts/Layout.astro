---
const { title = 'Core Supply Partners LLC' } = Astro.props;
const description =
	'Empresa de distribución mayorista en EE.UU. con enfoque en abastecimiento, logística y exportación hacia América Latina.';
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<meta name="description" content={description} />
		<title>{title}</title>
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link
			rel="stylesheet"
			href="https://fonts.googleapis.com/css2?family=Montserrat:wght@500;600;700&family=Open+Sans:wght@400;500;600&display=swap"
		/>
	</head>
	<body data-lang="es" data-theme="light">
		<slot />
	</body>
</html>

<style is:global>
	:root {
		color-scheme: light;
		--navy: #0d1b2a;
		--gold: #e59f20;
		--light: #f5f5f5;
		--text: #1b2430;
		--muted: #4b5563;
		--card: #ffffff;
		--shadow: 0 20px 50px rgba(13, 27, 42, 0.12);
		--radius: 16px;
	}

	body[data-theme='dark'] {
		color-scheme: dark;
		--light: #0b121a;
		--text: #eef2f7;
		--muted: #cbd5e1;
		--card: #101b28;
		--shadow: 0 20px 50px rgba(2, 8, 16, 0.45);
		background: var(--light);
	}

	* {
		box-sizing: border-box;
	}

	body {
		margin: 0;
		font-family: 'Open Sans', system-ui, -apple-system, sans-serif;
		color: var(--text);
		background: var(--light);
		line-height: 1.6;
	}

	h1,
	h2,
	h3 {
		font-family: 'Montserrat', system-ui, -apple-system, sans-serif;
		margin: 0 0 12px;
		color: var(--navy);
	}

	body[data-theme='dark'] h1,
	body[data-theme='dark'] h2,
	body[data-theme='dark'] h3 {
		color: #f8fafc;
	}

	p {
		margin: 0 0 16px;
		color: var(--muted);
	}

	a {
		color: inherit;
		text-decoration: none;
	}

	img {
		max-width: 100%;
		display: block;
	}

	.container {
		width: min(1120px, 90vw);
		margin: 0 auto;
	}

	.topbar {
		display: flex;
		align-items: center;
		justify-content: space-between;
		gap: 16px;
		padding: 20px 0;
	}

	.logo {
		display: inline-flex;
		align-items: center;
		gap: 12px;
		font-weight: 700;
		color: #ffffff;
	}

	.logo-lockup {
		display: inline-flex;
		align-items: center;
	}

	.logo-lockup img {
		display: block;
		height: 48px;
		width: auto;
		filter: drop-shadow(0 8px 18px rgba(0, 0, 0, 0.35));
	}

	.topbar-actions {
		display: flex;
		gap: 10px;
		flex-wrap: wrap;
	}

	.toggle {
		padding: 8px 14px;
		border-radius: 999px;
		border: 1px solid rgba(255, 255, 255, 0.3);
		background: rgba(255, 255, 255, 0.08);
		color: #ffffff;
		font-weight: 600;
		cursor: pointer;
		transition: transform 0.2s ease, background 0.2s ease;
	}

	body[data-theme='dark'] .toggle {
		border-color: rgba(229, 159, 32, 0.4);
	}

	.toggle.is-active {
		background: rgba(229, 159, 32, 0.28);
		color: #ffffff;
	}

	.lang-block[data-lang] {
		display: none;
	}

	body[data-lang='es'] .lang-block[data-lang='es'],
	body[data-lang='en'] .lang-block[data-lang='en'] {
		display: block;
	}

	.section {
		padding: 80px 0;
	}

	.section--light {
		background: #ffffff;
	}

	body[data-theme='dark'] .section--light {
		background: #0f1722;
	}

	.badge {
		display: inline-flex;
		align-items: center;
		gap: 8px;
		padding: 6px 14px;
		border-radius: 999px;
		font-size: 0.9rem;
		background: rgba(229, 159, 32, 0.12);
		color: var(--navy);
		font-weight: 600;
	}

	.button {
		display: inline-flex;
		align-items: center;
		justify-content: center;
		gap: 10px;
		padding: 14px 28px;
		border-radius: 999px;
		background: var(--navy);
		color: #ffffff;
		font-weight: 600;
		border: none;
		cursor: pointer;
		transition: transform 0.2s ease, box-shadow 0.2s ease;
		box-shadow: 0 18px 30px rgba(13, 27, 42, 0.2);
	}

	.button--gold {
		background: var(--gold);
		color: var(--navy);
		box-shadow: 0 18px 30px rgba(229, 159, 32, 0.25);
	}

	.button:hover {
		transform: translateY(-2px);
	}

	.grid {
		display: grid;
		gap: 24px;
	}

	.grid--2 {
		grid-template-columns: repeat(2, minmax(0, 1fr));
	}

	.grid--3 {
		grid-template-columns: repeat(3, minmax(0, 1fr));
	}

	.card {
		background: var(--card);
		border-radius: var(--radius);
		padding: 28px;
		box-shadow: var(--shadow);
	}

	body[data-theme='dark'] .card {
		border: 1px solid rgba(148, 163, 184, 0.15);
	}

	.hero {
		background: linear-gradient(130deg, rgba(13, 27, 42, 0.96), rgba(13, 27, 42, 0.8));
		color: #ffffff;
		padding: 120px 0 90px;
		position: relative;
		overflow: hidden;
	}

	.hero::after {
		content: '';
		position: absolute;
		inset: 0;
		background: radial-gradient(circle at 20% 20%, rgba(229, 159, 32, 0.2), transparent 45%),
			radial-gradient(circle at 80% 30%, rgba(255, 255, 255, 0.08), transparent 45%);
		pointer-events: none;
	}

	.hero h1,
	.hero p {
		color: #ffffff;
	}

	.hero-content {
		max-width: 620px;
	}

	.trade-badges {
		display: flex;
		flex-wrap: wrap;
		gap: 10px;
		margin: 18px 0 12px;
	}

	.trade-pill {
		padding: 8px 16px;
		border-radius: 999px;
		background: rgba(255, 255, 255, 0.12);
		border: 1px solid rgba(255, 255, 255, 0.2);
		font-weight: 600;
		color: #ffffff;
	}

	.stats {
		display: grid;
		grid-template-columns: repeat(3, minmax(0, 1fr));
		gap: 16px;
		margin-top: 32px;
	}

	.stat-card {
		padding: 18px;
		border-radius: 14px;
		background: rgba(255, 255, 255, 0.08);
		border: 1px solid rgba(255, 255, 255, 0.16);
	}

	.stat-card strong {
		display: block;
		font-size: 1.4rem;
		color: #ffffff;
	}

	.stat-card span {
		color: rgba(255, 255, 255, 0.8);
		font-size: 0.95rem;
	}

	.hero-actions {
		display: flex;
		flex-wrap: wrap;
		gap: 16px;
		margin-top: 28px;
	}

	.highlight {
		color: var(--gold);
		font-weight: 600;
	}

	.ops-note {
		margin-top: 18px;
		padding: 14px 16px;
		border-radius: 16px;
		background: rgba(255, 255, 255, 0.08);
		border: 1px solid rgba(255, 255, 255, 0.18);
		display: grid;
		gap: 8px;
	}

	.ops-note__label {
		font-weight: 700;
		letter-spacing: 0.08em;
		text-transform: uppercase;
		font-size: 0.8rem;
		color: #ffffff;
	}

	.ops-note__chips {
		display: flex;
		flex-wrap: wrap;
		gap: 8px;
	}

	.ops-chip {
		padding: 6px 12px;
		border-radius: 999px;
		background: rgba(255, 255, 255, 0.12);
		border: 1px solid rgba(255, 255, 255, 0.18);
		font-size: 0.85rem;
		font-weight: 600;
		color: #ffffff;
	}

	.ops-note small {
		color: rgba(255, 255, 255, 0.85);
		font-size: 0.85rem;
	}

	.feature-list {
		list-style: none;
		padding: 0;
		margin: 0;
		display: grid;
		gap: 12px;
	}

	.feature-list li {
		padding: 14px 18px;
		background: rgba(13, 27, 42, 0.06);
		border-radius: 12px;
		font-weight: 600;
		color: var(--navy);
	}

	body[data-theme='dark'] .feature-list li {
		background: rgba(148, 163, 184, 0.08);
		color: #e2e8f0;
	}

	.legal-list {
		list-style: none;
		padding: 0;
		margin: 0;
		display: grid;
		gap: 12px;
	}

	.legal-list strong {
		color: var(--navy);
	}

	body[data-theme='dark'] .legal-list,
	body[data-theme='dark'] .legal-list strong {
		color: #e2e8f0;
	}

	.form {
		display: grid;
		gap: 16px;
	}

	.form input,
	.form textarea {
		width: 100%;
		padding: 12px 14px;
		border-radius: 12px;
		border: 1px solid rgba(13, 27, 42, 0.15);
		font-family: inherit;
		font-size: 1rem;
		background: #ffffff;
	}

	body[data-theme='dark'] .form input,
	body[data-theme='dark'] .form textarea {
		background: #0b111b;
		color: #e2e8f0;
		border-color: rgba(148, 163, 184, 0.25);
	}

	.form textarea {
		min-height: 140px;
		resize: vertical;
	}

	.footer {
		padding: 32px 0;
		background: var(--navy);
		color: #ffffff;
	}

	.footer a {
		color: #ffffff;
		opacity: 0.8;
	}

	.contact-fab {
		position: fixed;
		right: 20px;
		bottom: 20px;
		z-index: 40;
		padding: 12px 22px;
		border-radius: 999px;
		background: var(--gold);
		color: var(--navy);
		font-weight: 700;
		box-shadow: 0 16px 30px rgba(229, 159, 32, 0.3);
	}

	@media (max-width: 900px) {
		.grid--2,
		.grid--3 {
			grid-template-columns: 1fr;
		}

		.stats {
			grid-template-columns: 1fr;
		}

		.hero {
			padding: 90px 0 70px;
		}
	}

	@media (max-width: 600px) {
		.section {
			padding: 64px 0;
		}

		.hero-actions {
			flex-direction: column;
			align-items: stretch;
		}

		.button,
		.contact-fab {
			width: 100%;
			text-align: center;
		}

		.contact-fab {
			right: 16px;
			left: 16px;
		}
	}
</style>
